<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <typeAliases>
        <typeAlias type="net.jgn.cliptext.server.user.User" alias="User"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property userName="driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
                <property userName="url"
                          value="jdbc:derby:dbUsers;create=true;user=me;password=me" />
                <property userName="username" value="me" />
                <property userName="password" value="me" />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="user-mapper.xml" />
    </mappers>

</configuration>